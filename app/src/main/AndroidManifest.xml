<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.insspring.nikita_internship">

    <application
        android:allowBackup="true"
        android:icon="@drawable/pic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity android:name="com.insspring.nikita_internship.ui.product.ProductActivity">
            <intent-filter>
                <action android:name="AddToBagActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.insspring.nikita_internship.ui.productsmenu.ProductsMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.insspring.nikita_internship.ui.addtobag.AddToBagActivity">
            <intent-filter>
                <action android:name="AddToBagActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>