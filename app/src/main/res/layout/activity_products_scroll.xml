<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dp_254"
        android:layout_height="@dimen/dp_294"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_cream_rec_round_26"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vTvPrefixCard"
            style="@style/TextView.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/vTvProductNameCard"
            style="@style/TextView.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="name"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

</LinearLayout>