<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_234"
    android:layout_height="@dimen/dp_294"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp_6"
    android:elevation="@dimen/dp_12"
    app:cardCornerRadius="@dimen/dp_24">

    <ImageView
        android:id="@+id/vIvProductImageCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_lemon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_white_oval_40_round_14"
        android:gravity="center">

        <ImageView
            android:id="@+id/vIvLikeProductList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_2"
            tools:src="@drawable/ic_like_product_list" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_210"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vTvProductNameCard"
            style="@style/TextView.ItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/price"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/vTvProductPriceCard"
            style="@style/TextView.Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/price"
            android:textSize="@dimen/sp_22" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


